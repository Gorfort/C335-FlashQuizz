<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashQuizzV3.AddCardPage"
             Title="">

    <ContentPage.Content>
        <Grid>
            <!-- Your existing content goes here -->
            <StackLayout VerticalOptions="StartAndExpand">
                <VerticalStackLayout Padding="30" Spacing="10">
                    <Label Text="Add a new Card" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

                    <Entry x:Name="QuestionEntry" Placeholder="Enter the question" MaxLength="30" Margin="0,20,0,0" />

                    <Entry x:Name="AnswerEntry" Placeholder="Enter the answer" MaxLength="30" />

                    <Button Text="Save" Clicked="OnSaveButtonClicked" Margin="80,20,80,0" BackgroundColor="YellowGreen" />
                </VerticalStackLayout>
            </StackLayout>

            <!-- "Go Back" button -->
            <StackLayout VerticalOptions="End" Margin="70,0,70,20">
                <Button Text="Go Back" Clicked="OnGoBackButtonClicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>
